-- Vyter Hub by Trần Tú (inspired by redz Hub - Fixed Farm tab)
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local UICorner = Instance.new("UICorner")
local Title = Instance.new("TextLabel")
local FarmBtn = Instance.new("TextButton")

-- Parent GUI
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.Name = "VyterHubGUI"

-- Main Frame
MainFrame.Size = UDim2.new(0, 200, 0, 150)
MainFrame.Position = UDim2.new(0.5, -100, 0.5, -75)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30) -- Màu xám đậm
MainFrame.Parent = ScreenGui

UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = MainFrame

-- Title
Title.Text = "Vyter"
Title.Size = UDim2.new(1, 0, 0, 30)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextScaled = true
Title.BackgroundTransparency = 1
Title.Parent = MainFrame

-- Farm Tab (tạo trước khi gán sự kiện cho FarmBtn)
local FarmTab = Instance.new("Frame")
FarmTab.Size = UDim2.new(0, 200, 0, 250)
FarmTab.Position = UDim2.new(0.5, -100, 0.5, -125)
FarmTab.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
FarmTab.Visible = false -- Ẩn ban đầu
FarmTab.Parent = ScreenGui

-- Farm Button
FarmBtn.Text = "Farm"
FarmBtn.Size = UDim2.new(0, 160, 0, 40)
FarmBtn.Position = UDim2.new(0.1, 0, 0.3, 0)
FarmBtn.BackgroundColor3 = Color3.fromRGB(50, 150, 50) -- Xanh lá nhạt
FarmBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
FarmBtn.Parent = MainFrame
FarmBtn.MouseButton1Click:Connect(function()
    FarmTab.Visible = not FarmTab.Visible -- Đảm bảo mở/đóng tab
end)

-- Auto Farm Option
local AutoFarmOption = Instance.new("TextButton")
AutoFarmOption.Text = "Auto Farm"
AutoFarmOption.Size = UDim2.new(0, 160, 0, 30)
AutoFarmOption.Position = UDim2.new(0, 20, 0, 20)
AutoFarmOption.BackgroundColor3 = Color3.fromRGB(50, 150, 50)
AutoFarmOption.TextColor3 = Color3.fromRGB(255, 255, 255)
AutoFarmOption.Parent = FarmTab
local autoFarming = false
AutoFarmOption.MouseButton1Click:Connect(function()
    autoFarming = not autoFarming
    AutoFarmOption.Text = autoFarming and "Stop Auto Farm" or "Auto Farm"
    while autoFarming do
        local character = game.Players.LocalPlayer.Character
        if character and character:FindFirstChild("HumanoidRootPart") then
            character.HumanoidRootPart.CFrame = character.HumanoidRootPart.CFrame + Vector3.new(math.random(-10, 10), 0, math.random(-10, 10))
            wait(0.5)
        else
            autoFarming = false
            AutoFarmOption.Text = "Auto Farm"
            break
        end
    end
end)

-- Farm Bones Option
local FarmBonesOption = Instance.new("TextButton")
FarmBonesOption.Text = "Farm Bones"
FarmBonesOption.Size = UDim2.new(0, 160, 0, 30)
FarmBonesOption.Position = UDim2.new(0, 20, 0, 60)
FarmBonesOption.BackgroundColor3 = Color3.fromRGB(50, 150, 50)
FarmBonesOption.TextColor3 = Color3.fromRGB(255, 255, 255)
FarmBonesOption.Parent = FarmTab
local farmingBones = false
FarmBonesOption.MouseButton1Click:Connect(function()
    farmingBones = not farmingBones
    FarmBonesOption.Text = farmingBones and "Stop Farm Bones" or "Farm Bones"
    while farmingBones do
        local character = game.Players.LocalPlayer.Character
        if character and character:FindFirstChild("HumanoidRootPart") then
            -- Teleport to Haunted Castle
            character.HumanoidRootPart.CFrame = CFrame.new(-10149.78125, 142.135437, 5836.06934)
            wait(1)
            for _, v in pairs(game.Workspace.Enemies:GetChildren()) do
                if v:FindFirstChild("Humanoid") and v.Humanoid.Health > 0 then
                    repeat
                        character.HumanoidRootPart.CFrame = v.HumanoidRootPart.CFrame * CFrame.new(0, 0, 5)
                        wait(0.1)
                        game:GetService("VirtualUser"):CaptureController()
                        game:GetService("VirtualUser"):Button1Down(Vector2.new(0, 0), workspace.CurrentCamera.CFrame)
                        wait(0.1)
                        game:GetService("VirtualUser"):Button1Up(Vector2.new(0, 0), workspace.CurrentCamera.CFrame)
                    until v.Humanoid.Health <= 0 or not farmingBones
                end
            end
            wait(1)
        else
            farmingBones = false
            FarmBonesOption.Text = "Farm Bones"
            break
        end
    end
end)

-- Boss Quest Option
local BossQuestOption = Instance.new("TextButton")
BossQuestOption.Text = "Boss Quest"
BossQuestOption.Size = UDim2.new(0, 160, 0, 30)
BossQuestOption.Position = UDim2.new(0, 20, 0, 100)
BossQuestOption.BackgroundColor3 = Color3.fromRGB(50, 150, 50)
BossQuestOption.TextColor3 = Color3.fromRGB(255, 255, 255)
BossQuestOption.Parent = FarmTab
local doingBossQuest = false
BossQuestOption.MouseButton1Click:Connect(function()
    doingBossQuest = not doingBossQuest
    BossQuestOption.Text = doingBossQuest and "Stop Boss Quest" or "Boss Quest"
    while doingBossQuest do
        local character = game.Players.LocalPlayer.Character
        if character and character:FindFirstChild("HumanoidRootPart") then
            -- Teleport to Elite Hunter
            character.HumanoidRootPart.CFrame = CFrame.new(-5412.012207, 314.174927, -2666.801758)
            wait(1)
            local eliteHunter = game.Workspace:FindFirstChild("Elite Hunter")
            if eliteHunter then
                character.HumanoidRootPart.CFrame = eliteHunter.HumanoidRootPart.CFrame * CFrame.new(0, 0, 5)
                wait(1)
                print("Accepted Elite Hunter quest")
            end
            -- Teleport to Darkbeard
            character.HumanoidRootPart.CFrame = CFrame.new(3904.49976, 37.6849289, -1216.03662)
            wait(1)
            local boss = game.Workspace.Enemies:FindFirstChild("Darkbeard")
            if boss and boss:FindFirstChild("Humanoid") and boss.Humanoid.Health > 0 then
                repeat
                    character.HumanoidRootPart.CFrame = boss.HumanoidRootPart.CFrame * CFrame.new(0, 0, 5)
                    wait(0.1)
                    game:GetService("VirtualUser"):CaptureController()
                    game:GetService("VirtualUser"):Button1Down(Vector2.new(0, 0), workspace.CurrentCamera.CFrame)
                    wait(0.1)
                    game:GetService("VirtualUser"):Button1Up(Vector2.new(0, 0), workspace.CurrentCamera.CFrame)
                until boss.Humanoid.Health <= 0 or not doingBossQuest
            end
            wait(1)
        else
            doingBossQuest = false
            BossQuestOption.Text = "Boss Quest"
            break
        end
    end
end)
